{% extends "base.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' href='{{ asset('css/homepage.css') }}' />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div id="login-form">
        <header>
            <h3>{{ 'users.login' | trans }}</h3>
        </header>
        <section>
            <form action="{{ path('login') }}" method="POST">
                <input type="text" name="_username" placeholder="{{ 'users.identifier' | trans }}" value="{{ last_username }}"/>
                <input type="password" name="_password" placeholder="{{ 'users.plainPassword.first' | trans }}" />
                <div class="form-error">
                    {% if error %}
                        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    {% endif %}
                </div>
                <button type="submit" class="button">
                    {{ 'users.connect' | trans }}
                </button>
                <h4>{{ 'members.registration.catchphrase' | trans }}</h4>
                <a href="{{ path('member_registration') }}" class="button">{{ 'members.registration.link' | trans}}</a>
            </form>
        </section>
    </div>
{% endblock %}
