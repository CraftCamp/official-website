{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - {{ 'members.registration.title' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/members.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/members.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="registration">
        <header>
            <h3>{{ 'members.registration.title' | trans }}</h3>
        </header>
        <section>
            <form onsubmit="createMember(event);">
                <input type="text" name="username" placeholder="{{ 'users.username' | trans }}" />
                <input type="text" name="email" placeholder="{{ 'users.email' | trans }}" />
                <input type="password" name="password" placeholder="{{ 'users.plainPassword.first' | trans }}" />
                <input type="password" name="password_confirmation" placeholder="{{ 'users.plainPassword.second' | trans }}" />
                <button type="submit" class="button">
                    {{ 'members.registration.validate' | trans }}
                </button>
                <div class="form-error"></div>
                <h4>{{ 'users.signin_with' | trans }}</h4>
                <a class="button sign-in-button" href="{{ url("hwi_oauth_service_redirect", {service: "github"}) }}">
                    <i class="fab fa-github fa-2x"></i>
                    {{ 'users.github_signin' | trans }}
                </a>
            </form>
        </section>
    </div>
{% endblock %}

